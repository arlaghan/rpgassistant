<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RPGAssistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Generic color scheme -->
        <item name="colorPrimary">@color/Generic.Green</item>
        <item name="colorPrimaryVariant">@color/Generic.Green.Light</item>
        <item name="colorOnPrimary">@color/Generic.Text.Light</item>
        <item name="colorSecondary">@color/Generic.Yellow</item>
        <item name="colorSecondaryVariant">@color/Generic.Yellow.Light</item>
        <item name="colorOnSecondary">@color/Generic.Text.Dark</item>

        <!-- Common across all themes -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- SciFi Theme -->
    <style name="Theme.RPGAssistant.SciFi" parent="Theme.RPGAssistant">
        <item name="colorPrimary">@color/SciFi.Blue</item>
        <item name="colorPrimaryVariant">@color/SciFi.Blue.Light</item>
        <item name="colorOnPrimary">@color/SciFi.Text.Light</item>
        <item name="colorSecondary">@color/SciFi.Orange</item>
        <item name="colorSecondaryVariant">@color/SciFi.Orange.Light</item>
        <item name="colorOnSecondary">@color/SciFi.Text.Dark</item>
    </style>

    <!-- Fantasy Theme -->
    <style name="Theme.RPGAssistant.Fantasy" parent="Theme.RPGAssistant">
        <item name="colorPrimary">@color/Fantasy.Red</item>
        <item name="colorPrimaryVariant">@color/Fantasy.Red.Light</item>
        <item name="colorOnPrimary">@color/Fantasy.Text.Dark</item>
        <item name="colorSecondary">@color/Fantasy.Black</item>
        <item name="colorSecondaryVariant">@color/Fantasy.Black.Light</item>
        <item name="colorOnSecondary">@color/Fantasy.Text.Light</item>
    </style>

    <style name="Theme.RPGAssistant.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RPGAssistant.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>